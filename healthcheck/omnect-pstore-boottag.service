[Unit]
Description=Create boottag on system start-up
DefaultDependencies=no
Requires=local-fs.target

[Service]
Type=exec
ExecStart=+-/bin/sh -c "[ -x /usr/sbin/omnect_reboot_reason.sh ] && omnect_reboot_reason.sh boottag_set append"
RemainAfterExit=yes

User=omnect_device_service
Group=omnect_device_service

[Install]
WantedBy=sysinit.target
