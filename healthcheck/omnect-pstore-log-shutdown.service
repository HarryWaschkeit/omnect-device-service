[Unit]
Description=Log shutdown to pstore
DefaultDependencies=no
Requires=poweroff.target halt.target

[Service]
Type=exec
ExecStart=/usr/sbin/omnect_log_reboot_reason_to_pmsg.sh shutdown
RemainAfterExit=yes

User=omnect_device_service
Group=omnect_device_service

[Install]
WantedBy=poweroff.target halt.target
